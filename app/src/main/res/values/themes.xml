<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoBroker" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <item name="app_statusNoNetwork">@style/Theme.AutoBroker.NoNetworkStyle</item>
        <item name="app_statusSync">@style/Theme.AutoBroker.SyncStyle</item>
        <item name="app_statusProgressIndicator">@style/Theme.AutoBroker.SyncProgressStyle</item>
        <item name="app_bottomViewStyle">@style/Theme.AutoBroker.BottomViewStyle</item>
    </style>

    <style name="StatusBar">
        <item name="android:padding">@dimen/size_4</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.AutoBroker.NoNetworkStyle" parent="StatusBar">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AutoBroker.SyncStyle" parent="StatusBar">
        <item name="android:background">@color/sync_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AutoBroker.SyncProgressStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/size_6</item>
        <item name="android:layout_height">@dimen/size_6</item>
    </style>

    <style name="Theme.AutoBroker.BottomViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
    </style>

    <style name="Theme.AutoBroker.TextAppearance" />

    <style name="Theme.AutoBroker.TextAppearance.Subtitle.OnPrimary" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="Theme.AutoBroker.TextAppearance.Title.OnPrimary" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_on_primary</item>
    </style>
</resources>