<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_padding"
    android:background="@drawable/button_background"
    android:backgroundTint="@color/color_on_secondary"
    android:padding="@dimen/default_padding">

    <TextView
        android:id="@+id/label_wait_some_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_wait_some_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding"
        android:indeterminateTint="@color/primary_color"
        android:progressTint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@+id/label_wait_some_time"
        app:layout_constraintStart_toStartOf="@+id/label_wait_some_time"
        app:layout_constraintTop_toBottomOf="@+id/label_wait_some_time" />

</androidx.constraintlayout.widget.ConstraintLayout>